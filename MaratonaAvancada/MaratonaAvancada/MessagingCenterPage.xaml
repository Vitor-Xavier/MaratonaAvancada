<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaratonaAvancada.MessagingCenterPage"
             Title="Itens">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="item" Text="{Binding ItemText}" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding MessageText}" Placeholder="Mensagem"/>
            <Button Text="Adicionar" Command="{Binding AddMessageCommand}"/>
            <ListView ItemsSource="{Binding Messages}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Text}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>